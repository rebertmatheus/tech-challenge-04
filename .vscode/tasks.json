{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "func",
			"label": "func: host start",
			"command": "host start",
			"problemMatcher": "$func-python-watch",
			"isBackground": true,
			"dependsOn": "pip install (functions)",
			"options": {
				"cwd": "${workspaceFolder}/data-service",
				"env": {
					"PYTHONPATH": "${workspaceFolder}/data-service",
					"PATH": "${workspaceFolder}/data-service/.venv/bin:${env:PATH}",
					"FUNCTIONS_WORKER_RUNTIME": "Python"
				}
			}
		},
		{
			"label": "pip install (functions)",
			"type": "shell",
			"osx": {
				"command": "${workspaceFolder}/data-service/.venv/bin/python -m pip install -r requirements.txt"
			},
			"windows": {
				"command": "${workspaceFolder}/data-service/.venv\\Scripts\\python -m pip install -r requirements.txt"
			},
			"linux": {
				"command": "${workspaceFolder}/data-service/.venv/bin/python -m pip install -r requirements.txt"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/data-service"
			}
		},
		{
			"type": "func",
			"label": "func: host start (data-service)",
			"command": "host start --port 9092",
			"problemMatcher": "$func-python-watch",
			"isBackground": true,
			"dependsOn": "pip install (data-service)",
			"options": {
				"cwd": "${workspaceFolder}/data-service"
			}
		},
		{
			"label": "pip install (data-service)",
			"type": "shell",
			"command": "uv sync",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/data-service"
			}
		},
		{
			"type": "func",
			"label": "func: host start (stock-service)",
			"command": "host start",
			"problemMatcher": "$func-python-watch",
			"isBackground": true,
			"dependsOn": "pip install (stock-service)",
			"options": {
				"cwd": "${workspaceFolder}/stock-service"
			}
		},
		{
			"label": "pip install (stock-service)",
			"type": "shell",
			"command": "uv sync",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/stock-service"
			}
		}
	]
}